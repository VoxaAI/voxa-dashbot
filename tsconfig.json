{
  "compilerOptions": {
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es5",
    "outDir": "./lib/",
    "moduleResolution": "node",
    "lib": ["es2015"],
    "types": ["node", "mocha"],
    "esModuleInterop": true,
    "inlineSources": true
  },
  "include": ["./src/"]
}
