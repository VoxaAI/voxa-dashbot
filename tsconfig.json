{
  "compilerOptions": {
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es5",
    "outDir": "./lib/",
    "moduleResolution": "node",
    "lib": ["es2015"],
    "esModuleInterop": true,
    "inlineSources": true,
    "declaration": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "include": ["./src/**/*"]
}
